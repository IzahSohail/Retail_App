{
  "name": "retail-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "postinstall": "npm --prefix backend install && npm --prefix frontend install",
    "dev": "npm-run-all -p dev:backend dev:frontend",
    "dev:backend": "npm --prefix backend run dev",
    "dev:frontend": "npm --prefix frontend start",
    "test": "jest",
    "test:cart": "jest tests/integration/cart.test.js",
    "test:performance": "TEST_MODE=true node tests/performance/run-performance-test.js",
    "test:performance:full": "TEST_MODE=true NODE_ENV=test node tests/performance/run-performance-test.js",
    "test:flashsales": "TEST_MODE=true node tests/flash_sales/surge-test.js",
    "test:flashsales:runner": "TEST_MODE=true node tests/flash_sales/run-surge-test.js"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prisma": "^6.16.2",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2"
  }
}
