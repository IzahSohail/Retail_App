{
  "name": "retail-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "postinstall": "npm --prefix backend install && npm --prefix frontend install",
    "dev": "npm-run-all -p dev:backend dev:frontend",
    "dev:backend": "npm --prefix backend run dev",
    "dev:frontend": "npm --prefix frontend run dev",
    "build": "npm --prefix frontend run build",
    "build:backend": "npm --prefix backend run build",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:cart": "NODE_OPTIONS=--experimental-vm-modules jest tests/integration/cart.test.js",
    "test:refund": "NODE_OPTIONS=--experimental-vm-modules jest tests/unit/refund.test.js",
    "test:performance": "TEST_MODE=true node tests/performance/run-performance-test.js",
    "test:performance:full": "TEST_MODE=true NODE_ENV=test node tests/performance/run-performance-test.js",
    "test:flashsales": "TEST_MODE=true node tests/flash_sales/surge-test.js",
    "test:flashsales:runner": "TEST_MODE=true node tests/flash_sales/run-surge-test.js"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.19.0"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "vite": "^7.2.2"
  }
}
