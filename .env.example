# Database Configuration
POSTGRES_USER=retailuser
POSTGRES_PASSWORD=retailpass
POSTGRES_DB=retaildb
DATABASE_URL=postgresql://retailuser:retailpass@localhost:5432/retaildb?schema=public

# Auth0 Configuration
AUTH0_SECRET=your-auth0-secret-generate-with-openssl-rand-base64-32
AUTH0_BASE_URL=http://localhost:3001
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com

# App Session Secret
APP_SESSION_SECRET=your-session-secret-generate-with-openssl-rand-base64-32

# Supabase Configuration (for file uploads)
SUPABASE_URL=your-supabase-project-url
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_BUCKET=products

# Test Mode (set to true to bypass Auth0 for testing)
TEST_MODE=false

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001

# Node Environment
NODE_ENV=development
